@model List<JobData>;

@{
  ViewData["Title"] = "Admin";
}

<div class="d-flex w-100">
    <aside
    class="d-flex justify-content-center py-5 align-items-center vh-100"
    style="width: 15%;"
    >
    <nav class="nav nav-pills flex-column text-center vh-100 py-5">
        <h5 >Dashboard</h5>
        <h6 class="mb-5 text-muted">Admin</h6>

        <div class="d-flex flex-column justify-content-around" style="height: 300px">
        <div>
            <a class="btn btn-outline-primary btn-sm" href="/CreateJob" style="padding: 15px; border-radius: 50px">
            <span style="margin: 10px;">+ Create Job</span>
            </a>
        </div>
        <div>
            <a class="nav-link active mb-3" href="/pages/admin/">Active Job</a>
            <a class="nav-link mb-3" href="/JobClosed">Closed Job</a>
        </div>
        </div>
    </nav>
    </aside>
    <main class="p-5" style="height: 100vh; width: 80%">
    <header class="mb-1">
        <div class="d-flex justify-content-between align-items-center">
        <input type="text" class="rounded" />
        <div class="d-flex justify-content-around align-items-center" style="width: 150px">
            <span>HR Name</span>
            <div class="rounded-circle" style="width: 40px; height: 40px; background-color: #4CAF50"></div>
        </div>
        </div>
    </header>
    <div class="py-2">
        <div class="my-4">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="rounded flex-grow-1 bg-light" style="height: 70px; padding: 10px;">
                        <p class="card-title h6">@item.JobTitle</p>
                        <div class="d-flex card-text justify-content-between align-items-center text-muted" style="font-size: .875em;">
                        <p class="list-inline-item">Post : @item.JobPostedDate</p>
                        <p class="list-inline-item">@item.Location</p>
                        </div>
                    
                    </div>
                    <div class="d-flex" style="padding-left: 10px;">
                        <button class="btn btn-warning btn-sm me-2">Edit</button>
                        <button class="btn btn-danger btn-sm me-2">Delete</button>
                        <button class="btn btn-primary btn-sm me-2">ON/OFF</button>
                    </div>
                    </div>
                </div>
            }
                
        </div>
    </main>
</div>