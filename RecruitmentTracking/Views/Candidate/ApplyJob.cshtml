@model CandidateEditProfile

@{
    ViewData["Title"] = "Apply Job";
}

      <body>
          <!-- content for apply job form -->
          <div class="container col-md-6 offset-md-4 shadow-lg p-5 mb-5 bg-white rounded" style="background-color:#f8f9fa ">
            <div class="mb-3">
              <p class="h6">Apply Job : </p>
              <p class="h4 text-muted text-body-secondary">@ViewBag.JobTitle</p>
              <hr/>
              @using(Html.BeginForm("ApplyJobs", "Candidate", FormMethod.Post, new { enctype = "multipart/form-data"}))
              {
                 <input type="hidden" name="JobId" value="@ViewBag.JobId" />

                <div>
                <div class="mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control"})
                </div>

                <div class="mb-3">
                    <label for="education" class="form-label">Last Education</label>
                    @Html.TextBoxFor(m => m.LastEducation, new { @class = "form-control"})
                </div>

                <div class="mb-3">
                    <label for="GPA" class="form-label">GPA</label>
                    @Html.TextBoxFor(m => m.GPA, new { @class = "form-control"})
                </div>

                <label for="file" class="form-label mt-3">Upload CV/Resume</label>
                  @Html.TextBoxFor(m => m.FileCV, new { @class = "form-control" ,@type = "file"})
                @* <input type="file" class="form-control" id="file" name="file"> *@
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                  <button type="submit" class="btn btn-primary mt-3">Submit</button>
                </div>
                    
                </div>
              }
            </div>


          </div>
