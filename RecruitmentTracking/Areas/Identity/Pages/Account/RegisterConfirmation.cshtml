@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<div class="container">
<p class="mt-32" style="display: flex; flex-direction: column; align-items: center; text-align: center;">
    This app does not currently have a real email sender registered, see these docs for how to configure a real email sender.
    Normally this would be emailed: <a href="https://aka.ms/aspaccountconf"></a>
    <br>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="mt-3 mb-32 btn bg-red-500 text-white hover:bg-red-600 rounded-lg">Click here to confirm your account</a>
</p>
</div>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}